# Bot Token from @BotFather
TG_BOT_TOKEN=your_bot_token_here

# API ID from my.telegram.org
APP_ID=your_api_id_here

# API Hash from my.telegram.org
API_HASH=your_api_hash_here

# Database Channel ID (Use a negative number if it's a Telegram channel/group)
CHANNEL_ID=-100xxxxxxxxxx

# Owner ID (Your Telegram User ID)
OWNER_ID=your_telegram_user_id_here

# Port for webhooks or other services (Default: 8080)
PORT=8080

# Database Configuration
DATABASE_URL=your_mongodb_uri_here
DATABASE_NAME=filesharexbot

# Force Subscription Channel ID (Optional, set 0 to disable)
FORCE_SUB_CHANNEL=-100xxxxxxxxxx
JOIN_REQUEST_ENABLED=True

# Number of bot workers (Default: 4)
TG_BOT_WORKERS=4

# Start Message and Image
START_PIC=https://your_start_image_url_here
START_MESSAGE=Hello {first}\n\nI can store private files in a specified channel, and users can access them via special links.

# Force Subscription Message
FORCE_SUB_MESSAGE=Hello {first}\n\n<b>You need to join my Channel/Group to use me.\n\nPlease join the Channel.</b>

# Custom Caption (Optional, set to None to disable)
CUSTOM_CAPTION=None

# Protect Content (Prevents users from forwarding files)
PROTECT_CONTENT=True

# Auto-delete settings (Time in seconds, set 0 to disable)
AUTO_DELETE_TIME=0
AUTO_DELETE_MSG=This file will be automatically deleted in {time} seconds. Please save it before then.
AUTO_DEL_SUCCESS_MSG=Your file has been successfully deleted. âœ…

# Disable channel post share button (True/False)
DISABLE_CHANNEL_BUTTON=False

# Admins (Space-separated Telegram User IDs)
ADMINS=1250450587 your_other_admin_id_here
